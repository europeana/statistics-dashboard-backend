<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>st.statistics.backend</groupId>
    <artifactId>statistics-dashboard-backend</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>statistics-dashboard-rest</module>
        <module>statistics-dashboard-service</module>
        <module>statistics-dashboard-common</module>
    </modules>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>

        <version.slf4j>1.7.30</version.slf4j>
        <version.jul.to.slf4j>1.7.30</version.jul.to.slf4j>
        <version.log4j>2.14.1</version.log4j>

        <version.spring>5.3.7</version.spring>
        <version.jackson>2.12.3</version.jackson>
        <version.maven.war.plugin>2.3</version.maven.war.plugin>
        <version.swagger>3.0.0</version.swagger>
        <version.swagger.annotations>1.6.2</version.swagger.annotations>
        <version.spring.test>${version.spring}</version.spring.test>
        <version.spring.context>${version.spring}</version.spring.context>
        <version.spring.beans>${version.spring}</version.spring.beans>


    </properties>

    <!-- Github connection -->
    <scm>
        <connection>scm:git:https://github.com/europeana/statistics-dashboard-backend</connection>
        <url>https://github.com/europeana/statistics-dashboard-backend</url>
        <tag>HEAD</tag>
        <developerConnection>scm:git:https://github.com/europeana/statistics-dashboard-backend</developerConnection>
    </scm>

    <dependencies>
        <dependency>
            <groupId>io.springfox</groupId>
            <artifactId>springfox-swagger2</artifactId>
            <version>${version.swagger}</version>
        </dependency>
        <dependency>
            <groupId>io.springfox</groupId>
            <artifactId>springfox-swagger-ui</artifactId>
            <version>${version.swagger}</version>
        </dependency>
        <dependency>
            <groupId>io.swagger</groupId>
            <artifactId>swagger-annotations</artifactId>
            <version>${version.swagger.annotations}</version>
        </dependency>
    </dependencies>
    
</project>